{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "removeComments": false,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "rootDir": ".",
    "typeRoots": ["./types"],
    "declarationDir": "dist",
    "outDir": "dist"
  }
}
